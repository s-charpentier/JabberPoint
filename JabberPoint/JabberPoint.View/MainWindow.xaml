<Window x:Class="JabberPoint.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JabberPoint.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Margin="0,0,0,0">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" />
                <MenuItem Header="_New" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Next" />
                <MenuItem Header="_Prev" />
                <MenuItem>
                    <MenuItem.Header>
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="textBlock1" Text="Go to" VerticalAlignment="Center"/>
                            <TextBox Margin="5 0 0 0" Width="30" Grid.Column="1" HorizontalAlignment="Right"/>
                        </Grid>
                    </MenuItem.Header>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Themes">
                    <MenuItem Header="_Theme 1" />
                    <MenuItem Header="_Theme 2" />
                    <MenuItem Header="_Theme 3" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" />
                
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Rectangle HorizontalAlignment="Stretch" 
           
           Margin="15,15,5,5" 
           VerticalAlignment="Stretch" 
           
           StrokeThickness="4" 
           Fill="#FF484A4D" 
           Grid.Column="1" Opacity="0.5">
                <Rectangle.Effect>
                    <DropShadowEffect BlurRadius="10" 
                           ShadowDepth="0" 
                           Color="Black" Opacity="0.5"/>
                </Rectangle.Effect>
            </Rectangle>
            <StackPanel x:Name="SlideshowArea" Orientation="Vertical" DockPanel.Dock="Bottom" Margin="10" Background="DarkGray"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Margin="5" Grid.Column="1">
                    <Image Source="Resources/PreviousFrame_16x.png"/>
                </Button>
                <Button Margin="5" Grid.Column="2">
                    <Image Source="Resources/PlayVideo_16x.png"/></Button>
                <Button Margin="5" Grid.Column="3">
                    <Image Source="Resources/NextFrameArrow_16x.png"/></Button>
            </Grid>
            <TextBlock FontFamily="Sitka Small"></TextBlock>
        </Grid>
        
    </DockPanel>
</Window>
